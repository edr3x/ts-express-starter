{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "alwaysStrict": true,
        "skipLibCheck": true,
        "removeComments": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
